<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= t "subjects.task.new" %></h5>
      <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= form_for [@subject, @task], remote: true do |f| %>
        <div class="form-group">
          <%= f.label t("subjects.task.name") %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t("subjects.task.description") %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t "subjects.task.close" %></button>
          <%= f.submit t("subjects.task.save"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
