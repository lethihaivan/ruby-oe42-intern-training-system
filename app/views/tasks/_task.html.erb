<span class="list-group-item list-group-item-action flex-column align-items-start" id="task_<%= task.id %>">
  <div class="d-flex w-100 justify-content-between">
    <h5 class="mb-1"><%= task.name %></h5>
    <small class="text-muted"><%= l task.created_at, format: :default %></small>
  </div>
  <small class="text-muted float-right">
    <%= link_to "<i class='fa fa-pencil-square-o'></i>".html_safe, edit_subject_task_path(@subject, task), remote: true %> |
    <%= link_to "<i class='fa fa-trash'></i>".html_safe, subject_task_path(@subject, task), method: :delete, remote: true, data: {confirm: t("confirm")} %>
  </small>
</span>
