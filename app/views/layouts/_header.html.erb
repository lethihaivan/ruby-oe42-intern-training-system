<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <p id="logo"><%= t ".name_app" %></p>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), root_path %></li>
        <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <% if logged_in? %>
          <% if current_user.supervisor? %>
            <li><%= link_to t("courses.supervisor.new.heading"), new_supervisor_course_path %></li>
            <li><%= link_to t(".all_subjects"), new_subject_path , class: "heading" %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "users.show.profile" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="divider"></li>
              <li>
                <%= link_to t("session.destroy.title"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("session.title"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
